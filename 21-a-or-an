public String aOrAn(String word) {
    //code here
Set<String> vowels = new Set<String>{'a', 'e', 'i', 'o', 'u'};
        String firstLetter = word.substring(0, 1).toLowerCase();

    if (vowels.contains(firstLetter)) {
            return 'an ' + word;
        } else {
            return 'a ' + word;
        }
    }
