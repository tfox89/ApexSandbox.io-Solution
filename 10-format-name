public String formatName(String firstName, String lastName) {
    if (String.isBlank(firstName) && String.isBlank(lastName)) {
        return ''; // Both names are null or empty, return empty string
    } else if (String.isBlank(firstName)) {
        return lastName; // Return last name if first name is null or empty
    } else if (String.isBlank(lastName)) {
        return firstName; // Return first name if last name is null or empty
    } else {
        return lastName + ', ' + firstName; // Concatenate last name, comma, and first name
    }
}