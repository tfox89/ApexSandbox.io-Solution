public String changeTimeFormat(String strTime) {
       
   
       public class TimeConversion {
    public static String changeTimeFormat(String strTime) {
        // Splitting the input string into hours and minutes
        List<String> timeParts = strTime.split(':');
        Integer hours = Integer.valueOf(timeParts[0]);
        Integer minutes = Integer.valueOf(timeParts[1]);

        // Converting 24-hour format to 12-hour format
        Integer newHours;
        String period;
        if (hours == 0) {
            newHours = 12;
            period = 'AM';
        } else if (hours >= 1 && hours <= 11) {
            newHours = hours;
            period = 'AM';
        } else if (hours == 12) {
            newHours = hours;
            period = 'PM';
        } else {
            newHours = hours - 12;
            period = 'PM';
        }

        // Formatting the result
        String newTime = String.valueOf(newHours < 10 ? '0' + newHours : newHours) + ':' + (minutes < 10 ? '0' + String.valueOf(minutes) : String.valueOf(minutes)) + ' ' + period;
        return newTime;
    }

    public static void main(String[] args) {
        String result = changeTimeFormat('08:05');
        System.assertEquals('08:05 AM', result, 'Should have converted to 08:05 AM');

        result = changeTimeFormat('00:05');
        System.assertEquals('12:05 AM', result, 'Should have converted to 12:05 AM');

        result = changeTimeFormat('23:15');
        System.assertEquals('11:15 PM', result, 'Should have converted to 11:15 PM');
    }
}

    
    


    

