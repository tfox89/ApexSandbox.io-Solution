public Integer fibonacci(Integer n) {
    // Base cases
    if (n <= 0) {
        return 0;
    } else if (n == 1) {
        return 1;
    }
    
    // Initialize variables for Fibonacci sequence
    Integer fibPrev = 0;
    Integer fibCurr = 1;
    
    // Loop to calculate Fibonacci sequence
    for (Integer i = 2; i <= n; i++) {
        Integer temp = fibCurr;
        fibCurr += fibPrev;
        fibPrev = temp;
    }
    
    return fibCurr;
}
